<Window x:Class="Desktop.Ui.Core.Windows.Wizard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             Width="480" Height="360">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Visible" Grid.Row="1">
            <Grid x:Name="MainGrid"></Grid>
        </ScrollViewer>
        <StackPanel Orientation="Horizontal" Margin="10, 5" Grid.Row="2" HorizontalAlignment="Right">
            <Button Content="Cancel" Margin="10, 0" Width="70" IsDefault="True" />
            <Button Content="Finish" Margin="0, 0" Width="70" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
